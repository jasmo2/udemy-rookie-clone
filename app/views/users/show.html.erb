<%= render 'header_admin' %>

<div class="ui page grid">
	<% if !@courses.blank? %>
	<% @courses.map do |course|  %>
	<div class="row">
		<div class="column">
			<h2 class="ui header"><%= course.name %></h2>
			<p><%= course.description %></p>
			<div class="ui five column  grid">
				<%= form_for :course,html:{class:'column'}, url: course_path(@current_user), method: :delete do |f| %>
					<%=f.hidden_field(:id, value:"#{course.id}")%>
					<button class="ui tiny red button m-top-10">Delete Course »</button>
				<%end%>
				<div class="column">
					<%=link_to "Edit »", edit_course_path(course), class: "ui tiny pink button m-top-10"%>
				</div>
				<div class="column"></div>
				<div class="column"></div>
				<div class="column"></div>
			</div>
		</div>
	</div>
	<% end %>
	<% else %>
		<div class="row">
			<div class="column">
				<h2 class="ui header">You do not have any courses registered at your name</h2>
				<p>if you want to register a new course tap the tab <strong>create</strong></p>
			</div>
		</div>
	<% end %>

	<div class="row">
		<div class="column">
			<div class="ui divider"></div>  
			<span>© Jasmo2, 2015</span>
		</div>
	</div>
</div>
