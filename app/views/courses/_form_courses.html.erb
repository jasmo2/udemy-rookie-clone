<div class="ui three column centered grid">
	<div class="column"></div>
	<div class="column">
		<%= form_for @course, url: courses_path(@course), html: {class: "ui warning form segment"} do |f| %>
			<% if flash[:error] %>
				<div id="error_explanation" class="ui warning message">
				    <h2 class='header'> Could you check something!</h2>
				    <ul class="list">
				    <% flash[:error].map do |message|%>
				      <li><%= message %></li>
				    <% end %>
				    </ul>
				</div>
			<% end %>
			<div class="ui raised segment">
				<a class="ui ribbon label">Create a Course!</a>
				<p></p>
				<%=f.hidden_field(:owner_id,value: current_user.id)%>
				<div class="field">
					<label>Course's name</label>
					<%= f.text_field :name, value: "#{@course.name}" %>
				</div>
				<div class="field">
					<label>Description</label>
					<%= f.text_area :description, value: "#{@course.description}" %>
				</div>
				<%= f.submit(class: "ui blue submit button") %>
				<div class="ui error message"></div>
			</div>
		<%end%>
	</div>
	<div class="column"></div>
</div>